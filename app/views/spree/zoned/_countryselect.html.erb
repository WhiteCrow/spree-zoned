<div id="zoned-countryselect" class="columns omega ten">
  <%= label_tag t('country') + ": "  %>
  <%= select_tag 'id',
    options_for_select(
      Rails.application.config.commonCountriesForSelect +
        ["-----------------", 0] +
        Zoned::countrylist.map { |country| [country.name, country.id] },
      214, # Unites States of America
    ),
    :data => {
	    :remote => true,
	    :url => url_for(
	      :controller => "zoned", 
		    :action => "setcountry",
		  ),
		}
  %>
</div>
